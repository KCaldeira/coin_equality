{
  "run_name": "baseline",
  "description": "Baseline scenario with moderate growth and 50-50 allocation",

  "scalar_parameters": {
    "alpha": 0.3,
    "_alpha": "Capital share of income",
    "delta": 0.10,
    "_delta": "Capital depreciation rate (10% per year)",
    "s": 0.3,
    "_s": "Savings rate (30% of net production)",
    "k_damage_coeff": 0.02,
    "_k_damage_coeff": "Climate damage coefficient: Fracttion of output times delta-T**k_demage_exp",
    "k_damage_exp": 2.0,
    "_k_damage_exp": "Climate damage exponent (2 means quadratic)",
    "k_climate": 0.5e-12,
    "_k_climate": "Temperature sensitivity to cumulative  (K/tCO2) 0.5e-12 ~ 1.8 K per 1000 GtC [noe we are in CO2 units]",
    "eta": 1.5,
    "_eta": "Coefficient of relative risk aversion",
    "rho": 0.01,
    "_rho": "Pure rate of time preference (1 % per year)",
    "G1": 0.67,
    "_G1": "Initial Gini index (moderate inequality)",
    "deltaL": 0.02,
    "_deltaL": "Fraction of income available for redistribution (5%)",
    "theta2": 2.0,
    "_theta2": "Abatement cost exponent (quadratic)"
  },

  "time_functions": {
    "_description": "Time-dependent exogenous functions",
    "A": {
      "_description": "Total factor productivity (TFP)",
      "type": "exponential_growth",
      "initial_value": 464.8589341,
      "growth_rate": 0.01,
      "_growth_rate": "Initial condition should give capital stock of $250trillion with alpha = 0.3 and L = 10e9; 1% annual TFP growth"
    },
    "L": {
      "_description": "Population",
      "type": "exponential_growth",
      "initial_value": 10e9,
      "growth_rate": 0.01,
      "_growth_rate": "1% annual population growth"
    },
    "sigma": {
      "_description": "Carbon intensity of GDP",
      "type": "exponential_growth",
      "initial_value": 0.0005,
      "growth_rate": -0.02,
      "_growth_rate": "Declining at 2% per year (decarbonization)"
    },
    "theta1": {
      "_description": "Abatement cost coefficient",
      "type": "exponential_growth",
      "initial_value": 0.05,
      "growth_rate": -0.01,
      "_growth_rate": "Assume 5% of global GDP to abate all emissions. Declining at 1% per year (technological progress)"
    }
  },

  "integration_parameters": {
    "_description": "Time integration settings",
    "t_start": 0.0,
    "t_end": 100.0,
    "_t_end": "Integrate for 100 years",
    "dt": 1.0,
    "_dt": "1-year time step (Euler method)",
    "rtol": 1e-6,
    "atol": 1e-9,
    "_tolerances": "Reserved for future adaptive solvers"
  },

  "control_function": {
    "_description": "Allocation policy between abatement and redistribution",
    "type": "constant",
    "value": 0.5,
    "_value": "50% to abatement, 50% to redistribution"
  }
}
