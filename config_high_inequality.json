{
  "run_name": "high_inequality",
  "description": "High inequality scenario with larger redistribution potential",

  "scalar_parameters": {
    "_description": "Time-invariant model parameters",
    "alpha": 0.3,
    "delta": 0.05,
    "_delta": "5% annual depreciation",
    "s": 0.2,
    "_s": "20% savings rate",
    "k_damage_coeff": 0.002,
    "k_damage_exp": 2.0,
    "k_climate": 1e-15,
    "eta": 2.0,
    "_eta": "Higher risk aversion than baseline",
    "rho": 0.015,
    "G1": 0.55,
    "_G1": "High initial inequality (Gini = 0.55)",
    "deltaL": 0.08,
    "_deltaL": "8% of income available for redistribution",
    "theta2": 2.0
  },

  "time_functions": {
    "_description": "Time-dependent exogenous functions",
    "A": {
      "_description": "Total factor productivity",
      "type": "exponential_growth",
      "initial_value": 1.0,
      "growth_rate": 0.01
    },
    "L": {
      "_description": "Population (logistic growth to 10B)",
      "type": "logistic_growth",
      "L0": 8e9,
      "L_inf": 10e9,
      "growth_rate": 0.02
    },
    "sigma": {
      "_description": "Carbon intensity",
      "type": "exponential_growth",
      "initial_value": 5e-13,
      "growth_rate": -0.02
    },
    "theta1": {
      "_description": "Abatement cost coefficient",
      "type": "exponential_growth",
      "initial_value": 0.05,
      "growth_rate": -0.01
    }
  },

  "integration_parameters": {
    "_description": "Time integration settings",
    "t_start": 0.0,
    "t_end": 100.0,
    "dt": 1.0,
    "rtol": 1e-6,
    "atol": 1e-9
  },

  "control_function": {
    "_description": "Allocation policy",
    "type": "constant",
    "value": 0.5,
    "_value": "50-50 split"
  }
}
